{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build",
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "plugins/**/*"],
  "exclude": ["node_modules", "build"]
}
